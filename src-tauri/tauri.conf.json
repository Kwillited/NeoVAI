{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "neovai",
  "version": "0.1.0",
  "identifier": "com.admin.neovai",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:18450",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
          "title": "neovai",
          "width": 800,
          "height": 600,
          "center": true,
          "dragDropEnabled": false,
          "decorations": false,
          "transparent": true
        }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "Command line interface for NeoVAI",
      "longDescription": "Command line interface for controlling NeoVAI application",
      "args": []
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "python"
    ]
  }
}
